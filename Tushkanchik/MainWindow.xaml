<Window x:Class="Tushkanchik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tushkanchik"
        mc:Ignorable="d"
        Title="MainPage" Height="450" Width="863">
    <Grid >

        <TabControl Margin="0,0,23,0">
            <TabItem x:Name="entertab" Header="Вход">
                <Grid Background="#FFE5E5E5">
                    <Border MinWidth="400" Margin="81,0,108,0" Background="White" VerticalAlignment="Center" Padding="30" MaxWidth="550" Height="195">
                        <StackPanel Margin="0,0,-71,0">
                            <Grid HorizontalAlignment="Left" Margin="0,0,0,30" Width="221">
                                <TextBlock  FontSize="24" RenderTransformOrigin="-0.033,0.752" HorizontalAlignment="Left" Width="76" >Users</TextBlock>

                                <ComboBox x:Name="usersList"  HorizontalAlignment="Left" Width="168" Margin="78,0,0,0"  SelectionChanged="ComboBox_SelectionChanged_1" RenderTransformOrigin="0.162,0.596" >
                                    <ComboBox.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform AngleY="-0.099"/>
                                            <RotateTransform/>
                                            <TranslateTransform Y="0.276"/>
                                        </TransformGroup>
                                    </ComboBox.RenderTransform>
                                    <ComboBoxItem Content=""/>
                                </ComboBox>



                            </Grid>
                            <Grid HorizontalAlignment="Right" Margin="0,0,0,30" Width="189" Height="200">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="57*"/>
                                    <ColumnDefinition Width="70*"/>
                                    <ColumnDefinition Width="62*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>
                                <TextBlock x:Name ="createAndEnter" TextAlignment="Left" FontSize="24" Margin="-5,-66,6,24" Grid.RowSpan="2" Grid.ColumnSpan="3">Name</TextBlock>
                                <TextBox x:Name="holderName" Margin="-44,-40,20,53"  Grid.ColumnSpan="2"/>
                                <Button HorizontalAlignment="Left" VerticalAlignment="Top" Content="Create new account" Width="162"  Height="48" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="-60,14,0,0" Click="Button_Click"/>
                                <Button x:Name="EnterButton" Content="Enter"  RenderTransformOrigin="0.53,0.509" Margin="-185,22,153,66" Click="Button_Click_1" Grid.RowSpan="2"/>
                            </Grid>

                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem x:Name="main" Header="Главная ">
                <Grid Background="#FFE5E5E5" MaxWidth="800" RenderTransformOrigin="0.482,0.298" Margin="20,0,20,0" Height="398">


                    <ComboBox Margin="19,63,634,305"/>
                    <Label Content="Кошелек" HorizontalAlignment="Left" Height="42" Margin="10,16,0,0" VerticalAlignment="Top" Width="106" FontSize="24" Grid.ColumnSpan="4"/>
                    <Label Content="Наличные" HorizontalAlignment="Left" Height="21" Margin="161,41,0,0" VerticalAlignment="Top" Width="71" FontWeight="Bold"/>
                    <TextBox TextWrapping="Wrap" Margin="237,41,439,330"/>
                    <Button Content="Button" Margin="237,142,439,224"/>
                    <Label Content="Карта" HorizontalAlignment="Left" Height="27" Margin="174,182,0,0" VerticalAlignment="Top" Width="46" FontWeight="Bold"/>
                    <Button Content="Button" Margin="236,347,439,19"/>
                    <TextBox TextWrapping="Wrap" Margin="237,303,439,64"/>
                    <Label Content="Вклад" HorizontalAlignment="Left" Height="27" Margin="476,47,0,0" VerticalAlignment="Top" Width="54" FontWeight="Bold"/>
                    <TextBox TextWrapping="Wrap" Margin="237,83,439,285"/>
                    <Button Content="Button" Margin="528,227,116,139"/>

                    <TextBlock x:Name="userName" TextWrapping="Wrap" Margin="30,321,604,7" RenderTransformOrigin="0.5,0.5">

                    </TextBlock>
                    <TextBox TextWrapping="Wrap" Margin="237,186,439,186"/>
                    <Label Content="Кэшбэк" HorizontalAlignment="Left" Height="27" Margin="174,229,0,0" VerticalAlignment="Top" Width="54" FontWeight="Bold" RenderTransformOrigin="0.471,0.467"/>
                    <Label Content="Процент" HorizontalAlignment="Left" Height="27" Margin="167,271,0,0" VerticalAlignment="Top" Width="65" FontWeight="Bold"/>
                    <TextBox TextWrapping="Wrap" Margin="535,45,123,315"/>
                    <ComboBox Margin="536,123,124,243"/>
                    <Label Content="Тип" HorizontalAlignment="Left" Height="27" Margin="470,126,0,0" VerticalAlignment="Top" Width="54" FontWeight="Bold"/>
                    <TextBox TextWrapping="Wrap" Margin="238,279,438,100"/>
                    <TextBox TextWrapping="Wrap" Margin="535,83,123,285"/>
                    <Label Content="Процент" HorizontalAlignment="Left" Height="27" Margin="470,78,0,0" VerticalAlignment="Top" Width="65" FontWeight="Bold"/>
                    <Button Content="Выход" Margin="620,2,41,364"/>
                    <TextBlock TextWrapping="Wrap" Margin="19,330,634,34" Grid.ColumnSpan="4"><Run Language="ru-ru" Text="Баланс"/><Run Text=":"/></TextBlock>
                    <TextBox TextWrapping="Wrap" Margin="238,230,438,142"/>
                    <TextBox TextWrapping="Wrap" Margin="534,169,124,199"/>
                    <Label x:Name="nameOfUser" Content="" HorizontalAlignment="Left" Height="28" Margin="126,18,0,0" VerticalAlignment="Top" Width="106" FontSize="15"/>

                </Grid>
            </TabItem>
            <TabItem Header="Доходы">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Кошелек" HorizontalAlignment="Left" Height="42" Margin="10,16,0,0" VerticalAlignment="Top" Width="106" FontSize="24"/>
                    <ComboBox Margin="19,63,648,310"/>
                    <Label Content="Добавить сумму " HorizontalAlignment="Left" Height="27" Margin="182,22,0,0" VerticalAlignment="Top" Width="111" FontWeight="Bold"/>
                    <TextBox TextWrapping="Wrap" Width="120" Margin="197,49,477,331"/>
                </Grid>
            </TabItem>
            <TabItem Header="Расходы">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Статистика">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <ComboBox Width="120"/>
        </TabControl>
    </Grid>
</Window>
